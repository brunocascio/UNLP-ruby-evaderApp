<div class="col-sm-10 col-sm-offset-1">
  <div class="row">
    <%= render template: 'shared/_notices' %>
  </div>

  <div class="row bg-info clearfix">
    <div class="pull-left">
      <%= link_to t('back'), contacts_path, :class => 'btn btn-sm btn-default' %>
    </div>
    <div class="pull-right">
      <%= link_to t('edit'), edit_contact_path(@contact), :class => 'btn btn-sm btn-warning' %>
    </div>
  </div>
  <hr>
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('name') %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @contact.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
