<div class="col-sm-8 col-sm-offset-2">

  <div class="row">
    <%= render template: 'shared/_notices' %>
  </div>

  <div class="row pull-right">
    <%= link_to 'New Client', new_client_path, :class => 'btn btn-sm btn-success' %>
  </div>

  <hr>

  <div class="row">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Birthdate</th>
          <th>Genre</th>
          <th>Identification number</th>
          <th>Cuilt</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.firstname %></td>
            <td><%= client.lastname %></td>
            <td><%= client.birthdate %></td>
            <td><%= client.genre %></td>
            <td><%= client.identification_number %></td>
            <td><%= client.cuilt %></td>
            <td>
              <%= render template: 'shared/_actions', locals: {model: client} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
