<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :birthdate %>
    <%= f.input :genre, :as => :select, :collection => Client.genres.keys %>
    <%= f.input :identification_number %>
    <%= f.input :cuilt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
