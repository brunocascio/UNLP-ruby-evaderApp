<%= render template: 'shared/_notices' %>

<div class="col-sm-6 col-sm-offset-3">
  <div class="row pull-right">
    <%= link_to 'New Person', new_person_path, :class => 'btn btn-success' %>
  </div>
  <hr>
  <div class="row">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Person type</th>
          <th>Cuilt</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.person_type %></td>
            <td><%= person.cuilt %></td>
            <td>
              <%= link_to 'Show', person %>
              <%= link_to 'Edit', edit_person_path(person) %>
              <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
