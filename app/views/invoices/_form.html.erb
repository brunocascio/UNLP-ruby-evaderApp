<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.input :issue_date %>
    <%= f.association :client %>
    <%= f.association :person %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
