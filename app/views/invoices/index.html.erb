<div class="col-sm-10 col-sm-offset-1">

  <div class="row">
    <%= render template: 'shared/_notices' %>
  </div>

  <div class="row pull-right">
    <%= link_to 'New Invoice', new_invoice_path, :class => 'btn btn-success' %>
  </div>

  <hr>

  <div class="row">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount</th>
          <th>Issue date</th>
          <th>Client</th>
          <th>Person</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.description %></td>
            <td>$<%= invoice.amount %></td>
            <td><%= l invoice.issue_date, format: :default %></td>
            <td><%= invoice.client %></td>
            <td><%= invoice.person %></td>
            <td><%= link_to 'Show', invoice %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
